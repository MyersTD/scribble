<Window x:Class="MyPaint.ExitPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyPaint"
        mc:Ignorable="d"
        Title="ExitPage" Height="136.333" Width="226.993">
    <Grid Background="White">
        <StackPanel Orientation="Vertical">
            <StackPanel>
                <TextBlock Foreground="Black" FontFamily="Arial" FontSize="15" HorizontalAlignment="Left" Margin="10,5,1,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="211"><Run Text="Are you sure you want to exit?"/><LineBreak/><Run/></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Click="yesClick" Background="LightSalmon" BorderBrush="Black" BorderThickness="2" Margin="40, 1,1,1" Height="50" Width="50" RenderTransformOrigin="0.5,0.504">
                    Yes
                </Button>
                <Button Click="noClick" Background="white" BorderBrush="Black" BorderThickness="2" Margin="40, 1,1,1" Height="50" Width="50">
                    No
                </Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
